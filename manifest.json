{
  "manifest_version": 3,
  "name": "AlgoPal",
  "version": "0.1",
  "author": "Tarun Teja",
  "description": "An AI helper fo AZ platform",
  "permissions": ["storage", "tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://maang.in/*"],
      "js": ["/package/marked.min.js", "content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/assets/cancel.png",
        "/assets/send.png",
        "/assets/ai.png",
        "/inject.js",
        "/assets/loader.gif"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/assets/logo.png",
      "24": "/assets/logo.png",
      "32": "/assets/logo.png"
    },
    "default_popup": "index.html",
    "default_title": "AlgoPal"
  }
}
